  <iframe
    id="appFrame"
    src="https://script.google.com/macros/s/AKfycbxzIhbigXij1UYMXhoOimU6CCGZdr38KMvsGJbdlJnh7fEX-vcrqVlRylmwUEwdsaijIg/exec"
    style="position:fixed;top:0;left:0;width:100%;height:100%;border:none;"
    allowfullscreen>
  </iframe>

  <script>
    function goFullscreen() {
      const iframe = document.querySelector('#appFrame');
      if (iframe.requestFullscreen) {
        iframe.requestFullscreen().catch(err => {
          console.warn('Fullscreen ditolak browser:', err.message);
        });
      }
    }
  </script>

